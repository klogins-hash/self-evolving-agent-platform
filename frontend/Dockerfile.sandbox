FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    wget \
    unzip \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY sandbox_requirements.txt ./
RUN pip install --no-cache-dir -r sandbox_requirements.txt

# Clone and install Strands tools
RUN git clone https://github.com/Stability-AI/strands-tools.git /tmp/strands-tools
RUN cd /tmp/strands-tools && pip install -e .

# Copy application files
COPY agent_sandbox.py ./app.py
COPY public/ ./public/

# Create necessary directories
RUN mkdir -p /app/public /app/sandbox_data

# Set environment variables
ENV E2B_API_KEY=e2b_08cd803fb0f53235473753396ec7e5c987cdd8fd
ENV PYTHONPATH=/tmp/strands-tools/src:$PYTHONPATH

# Expose port
EXPOSE 8003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8003/ || exit 1

# Run the agent sandbox
CMD ["chainlit", "run", "app.py", "--host", "0.0.0.0", "--port", "8003"]
