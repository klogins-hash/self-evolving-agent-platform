FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    wget \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Strands framework and dependencies
RUN pip install --no-cache-dir \
    chainlit>=1.1.0 \
    httpx>=0.25.0 \
    python-dotenv>=1.0.0 \
    pandas>=2.0.0 \
    numpy>=1.24.0 \
    requests>=2.31.0 \
    aiohttp>=3.8.0 \
    beautifulsoup4>=4.12.0 \
    pillow>=10.0.0 \
    matplotlib>=3.7.0

# Clone and install Strands tools
RUN git clone https://github.com/Stability-AI/strands-tools.git /tmp/strands-tools
RUN cd /tmp/strands-tools && pip install -e .

# Copy application files
COPY strands_agent_ui.py ./app.py
COPY strands_autonomous_agent.py ./strands_autonomous_agent.py
COPY public/ ./public/

# Create necessary directories
RUN mkdir -p /app/public /app/agent_workspace

# Set environment variables
ENV E2B_API_KEY=e2b_08cd803fb0f53235473753396ec7e5c987cdd8fd
ENV PYTHONPATH=/tmp/strands-tools/src:/app:$PYTHONPATH

# Expose port
EXPOSE 8004

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8004/ || exit 1

# Run the Strands autonomous agent UI
CMD ["chainlit", "run", "app.py", "--host", "0.0.0.0", "--port", "8004"]
